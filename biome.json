{
	"$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
	"files": {
		"includes": ["**", "!external", "!**/node_modules", "!**/dist", "!.katacut", "!**/.vitepress"]
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedVariables": "warn"
			},
			"suspicious": {
				"noExplicitAny": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single"
		}
	}
}
