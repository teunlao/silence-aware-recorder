{
  "name": "silence-aware-recorder",
  "author": "teunlao (https://github.com/teunlao)",
  "version": "2.0.0",
  "description": "Audio control with silence detection.",
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "types": "./src/server/index.ts",
      "bun": "./src/server/index.ts",
      "require": "./dist/server/index.js",
      "default": "./dist/client/index.mjs",
      "import": "./dist/client/index.mjs"
    },
    "./react": {
      "types": "./src/react/index.ts",
      "bun": "./src/react/index.ts",
      "require": "./dist/react/index.js",
      "default": "./dist/react/index.mjs",
      "import": "./dist/react/index.mjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup"
  },
  "keywords": ["record", "audio", "silence", "whisper", "live", "realtime"],
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "18.16.9",
    "@types/react": "18.2.74",
    "@types/react-dom": "18.2.24",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "eslint": "8.40.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.12",
    "eslint-plugin-typescript-sort-keys": "2.3.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsup": "8.0.2",
    "typescript": "5.4.4"
  },
  "tsup": {
    "entry": [
      "src/lib/index.ts",
      "src/react/index.ts"
    ],
    "treeshake": true,
    "sourcemap": "inline",
    "minify": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "format": [
      "cjs",
      "esm"
    ],
    "external": [
      "react"
    ]
  }
}
