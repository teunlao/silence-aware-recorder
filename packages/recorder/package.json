{
  "name": "silence-aware-recorder",
  "version": "2.0.1",
  "description": "Audio control with silence detection.",
  "author": "teunlao (https://github.com/teunlao)",
  "license": "ISC",
  "sideEffects": false,
  "main": "./dist/lib/index.js",
  "module": "./dist/lib/index.mjs",
  "types": "./dist/lib/index.d.ts",
  "files": [
    "dist/**/*",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.mjs",
      "require": "./dist/lib/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.mjs",
      "require": "./dist/react/index.js"
    }
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "@vitest/ui": "catalog:",
    "happy-dom": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teunlao/silence-aware-recorder.git",
    "directory": "packages/recorder"
  },
  "homepage": "https://github.com/teunlao/silence-aware-recorder#readme",
  "bugs": {
    "url": "https://github.com/teunlao/silence-aware-recorder/issues"
  },
  "keywords": [
    "record",
    "audio",
    "silence",
    "whisper",
    "live",
    "realtime"
  ]
}
