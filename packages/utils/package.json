{
  "name": "@saraudio/utils",
  "version": "0.0.0",
  "description": "Low-level utilities for SARAudio (DSP, ring buffers, PCM converters)",
  "license": "ISC",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "pnpm clean && tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teunlao/silence-aware-recorder.git",
    "directory": "packages/utils"
  },
  "homepage": "https://github.com/teunlao/silence-aware-recorder#readme",
  "bugs": {
    "url": "https://github.com/teunlao/silence-aware-recorder/issues"
  },
  "keywords": [
    "audio",
    "dsp",
    "pcm",
    "ring-buffer",
    "utilities",
    "real-time"
  ]
}
